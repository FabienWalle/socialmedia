{% extends 'base.html.twig' %}

{% block title %}Mon profil -{% endblock %}

{% block body %}
    <section class="container-fluid">
        <h1 class="text-center">Mes informations</h1>
        <div class="row my-2">
            <h2 class="col-4">Nom</h2>
            <h3 class="col-8">{{ app.user.name }}</h3>
        </div>
        <div class="row my-2">
            <h2 class="col-4">Email</h2>
            <h3 class="col-8">{{ app.user.email }}</h3>
        </div>
        <div class="row my-2">
            <h2 class="col-4">Bio</h2>
            <h3 class="col-8">{{ app.user.bio }}</h3>
        </div>
        <div class="row my-2">
            <h2 class="col-4">Date de naissance</h2>
            <h3 class="col-8">{{ app.user.dob|date('d-m-Y') }}</h3>
        </div>
        <div class="row my-2">
            <h2 class="col-4">Compte vérifié</h2>
            <h3 class="col-8">{{ app.user.getIsVerified() == true ? "oui" : "non" }}</h3>
        </div>
        <div class="row my-2">
            <h2 class="col-4">Roles</h2>
            <h3 class="col-8">
                {% for role in app.user.getRoles() %}
                    {{ role|replace({'ROLE_': ''})~" " }}
                {% endfor %}</h3>
        </div>
        <div class="col-12 text-center my-2">
            <a class="btn btn-primary" href="{{ path('user_edit') }}">Editer mon profil</a>
        </div>
    </section>
{% endblock %}
